<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="modifyColumnType_comment" author="glebova">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="comment"/>
            <columnExists tableName="comment" columnName="ad"/>
            <columnExists tableName="comment" columnName="author_id"/>
        </preConditions>
        <sql>
            <![CDATA[
        ALTER TABLE comment
        ALTER COLUMN ad TYPE INTEGER,
        ALTER COLUMN author_id TYPE INTEGER;
        ]]>
        </sql>
    </changeSet>

</databaseChangeLog>